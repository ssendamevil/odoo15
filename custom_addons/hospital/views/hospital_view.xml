<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="hospital_list_view" model="ir.ui.view">
        <field name="name">hospital.list.view</field>
        <field name="model">hospital.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="email" />
                <field name="phone" />
            </tree>
        </field>
    </record>

    <record id="hospital_form_view" model="ir.ui.view">
        <field name="name">hospital.form.view</field>
        <field name="model">hospital.profile</field>
        <field name="arch" type="xml">
            <form>
                <field name="name" />
                <field name="email" />
                <field name="phone" />
            </form>
        </field>
    </record>

    <record id="action_hospital_profile" model="ir.actions.act_window">
        <field name="name">Hospital Profile</field>
        <field name="res_model">hospital.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hospital_root_menu" name="Hospital" />
    <menuitem id="hospital_sub_menu" parent="hospital_root_menu"/>
    <menuitem id="hospital_profile_menu" name="Hospital" action="action_hospital_profile" parent="hospital_sub_menu"/>
</odoo>